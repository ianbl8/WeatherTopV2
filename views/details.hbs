{{> menu id="details"}}

<section class="ui segment">
  <h2 class="ui header">Update your details</h2>
  <form class="ui stacked segment form" action="/user/{{user.id}}/updatename" method="POST">
    <h3>Update your name</h3>
    <p>Your name is <strong>{{user.firstName}} {{user.lastName}}</strong>.</p>
    <p>You can change this here:</p>
    <div class="two fields">
      <div class="field">
        <label>First name</label>
        <input placeholder="First name" type="text" name="firstName">
      </div>
      <div class="field">
        <label>Last name</label>
        <input placeholder="Last name" type="text" name="lastName">
      </div>
      <div class="field">
        <label>Your password to confirm changes</label>
        <input placeholder="Password" type="password" name="password">
      </div>
    <button class="ui blue submit button">Save</button>
    </div>
  </form>
  <form class="ui stacked segment form" action="/user/{{user.id}}/updateemail" method="POST">
    <h3>Update your email address</h3>
    <p>Your email address is <strong>{{user.email}}</strong>.</p>
    <p>You can change this here:</p>
    <div class="two fields">
      <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="email" name="newEmail">
      </div>
      <div class="field">
        <label>Your password to confirm changes</label>
        <input placeholder="Password" type="password" name="password">
      </div>
    <button class="ui blue submit button">Save</button>
    </div>
  </form>
  <form class="ui stacked segment form" action="/user/{{user.id}}/updatepassword" method="POST">
    <h3>Update your password</h3>
    <p>Your password is stored securely.</p>
    <p>You can change this here:</p>
    <div class="two fields">
      <div class="field">
        <label>Old password</label>
        <input placeholder="Password" type="password" name="password">
      </div>
      <div class="field">
        <label>New password</label>
        <input placeholder="Password" type="password" name="newpassword1">
      </div>
      <div class="field">
        <label>Repeat your new password</label>
        <input placeholder="Password" type="password" name="newpassword2">
      </div>
    <button class="ui blue submit button">Save</button>
    </div>
  </form>
</section>

