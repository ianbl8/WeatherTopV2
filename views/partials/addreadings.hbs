<form class="ui stacked segment form" action="/station/{{station.id}}/addreadings" method="POST">
  <h2>Add readings</h2>
  <div class="five fields">
    <div class="field">
      <label>Weather code</label>
      <input placeholder="000" type="number" name="code">
    </div>
    <div class="field">
      <label>Temperature (°C)</label>
      <input placeholder="0.0" type="number" name="temperature">
    </div>
    <div class="field">
      <label>Wind speed (km/h)</label>
      <input placeholder="0.0" type="number" name="windSpeed">
    </div>
    <div class="field">
      <label>Wind direction (°)</label>
      <input placeholder="000" type="number" name="windDirection">
    </div>
    <div class="field">
      <label>Pressure (hPa)</label>
      <input placeholder="1000" type="number" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button">Add readings</button>
</form>