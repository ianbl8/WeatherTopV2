<table class="ui fixed table">
  <thead>
  <tr>
    <th>Date and time</th>
    <th>Weather code</th>
    <th>Temperature (°C)</th>
    <th>Wind speed (km/h)</th>
    <th>Wind direction (°)</th>
    <th>Pressure (hPa)</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
    <tr>
      <td>{{date}}</td>
      <td>{{code}}</td>
      <td>{{temperature}}</td>
      <td>{{windSpeed}}</td>
      <td>{{windDirection}}</td>
      <td>{{pressure}}</td>
      <td><a href="/station/{{../station.id}}/deletereadings/{{id}}" class="ui icon red button"><i class="icon trash"></i></a></td>
    </tr>
  {{/each}}
  </tbody>
</table>